<div class="grid">

    <div class="grid-item large--one-third push--large--one-third text-center">
  
      <h1>{{ 'customer.register.title' | t }}</h1>
  
      {% form 'create_customer' %}
  
        {% include 'form-errors-custom' %}
  
  
        <label for="name_of_store" class="hidden-label">Name of store</label>
        <input
          type="text"
          id="name_of_store"
          name="customer[note][Name of store]"
          placeholder="Name of store"
          required
        />
  
        <label for="address" class="hidden-label">Address</label>
        <input
          type="text"
          id="address"
          name="customer[note][Address]"
          placeholder="Address"
          required
        />

        <label for="address" class="hidden-label">City</label>
        <input
          type="text"
          id="city"
          name="customer[note][City]"
          placeholder="City"
          required
        />

        <label for="postal_code" class="hidden-label">Postal code</label>
        <input
          type="text"
          id="postal_code"
          name="customer[note][Postal code]"
          placeholder="Postal code"
          required
        />

        <label for="province" class="hidden-label">Province</label>
        <select id="province" name="customer[note][Province]">
          <option>Ontario</option>
          <option>Quebec</option>
          <option>Nova Scotia</option>
          <option>New Brunswick</option>
          <option>Manitoba</option>
          <option>British Columbia</option>
          <option>Prince Edward Island</option>
          <option>Saskatchewan</option>
          <option>Alberta</option>
          <option>Newfoundland and Labrador</option>
          <option>Northwest Territories</option>
          <option>Yukon</option>
          <option>Nunavut</option>
        </select>
  
        <label for="store_phone_number" class="hidden-label">Store phone number</label>
        <input
          type="tel"
          id="store_phone_number"
          name="customer[note][Store phone number]"
          placeholder="Store phone number"
          required
        />
  
        <label for="contact_phone_number" class="hidden-label">Contact phone number</label>
        <input
          type="tel"
          id="contact_phone_number"
          name="customer[note][Contact phone number]"
          placeholder="Contact phone number"
          required
        />
  
  
        <label for="name_of_store_owner" class="hidden-label">Name of store owner</label>
        <input
          type="text"
          id="name_of_store_owner"
          name="customer[note][Name of store owner]"
          placeholder="Name of store owner"
          required
        />
  
        <label for="name_of_buyer" class="hidden-label">Name of person who will place orders</label>
        <input
          type="text"
          id="name_of_buyer"
          name="customer[note][Name of buyer]"
          placeholder="Name of person who will place orders"
          required
        />
  
        <label for="gst_number" class="hidden-label">GST number</label>
        <input
          type="text"
          id="gst_number"
          name="customer[note][GST number]"
          placeholder="GST number"
          required
        />
  
        <label for="gst_number" class="hidden-label">Fax number</label>
        <input
          type="text"
          id="gst_number"
          name="customer[note][Fax number]"
          placeholder="Fax number"
        />
  
        <label for="email" class="hidden-label">{{ 'customer.register.email' | t }}</label>
        <input type="email" value="" name="customer[email]" id="email" placeholder="{{ 'customer.register.email' | t }}" {% if form.errors contains "email" %} class="error"{% endif %} autocorrect="off" autocapitalize="off">
      
        <label for="password" class="hidden-label">{{ 'customer.register.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="create_password" placeholder="{{ 'customer.register.password' | t }}" {% if form.errors contains "password" %} class="error"{% endif %}>
        <p>
          <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
        </p>
        {{ 'customer.register.or' | t }} <a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
  
      {% endform %}
  
    </div>
  
  </div>
  